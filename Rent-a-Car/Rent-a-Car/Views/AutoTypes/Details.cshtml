@model Rent_a_Car.Models.AutoType

@{
    ViewBag.Title = "Details";
    if (User.IsInRole("Admin") || User.IsInRole("Medewerker"))
    {
        Layout = "~/Views/Shared/_layoutAdmin.cshtml";
    }
    else
    {
        <style>
            .card a {
                color: black !important;
            }
        </style>
    }

}
<div class="container" style="padding-top: 100px">
    <div class="card shadow" >
        <div class="card-body">
            <h1>@Model.Merk @Model.Type - @Model.Uitvoering</h1>
            <div class="row" style="width: 100%">
                <div class="col-md-4">
                    @{
                        if (Model.Foto != null && Model.Foto.Length > 0)
                        {

                            var base64 = Convert.ToBase64String(Model.Foto);
                            var imgSrc = String.Format("data:image;base64,{0}", base64);

                            <img src="@imgSrc" class="card-img-top" style="width: 100%; height: 200px;" />
                        }
                        else
                        {
                            <img src="~/Content/Placeholder_car.jpg" class="card-img-top" style="width: 100%; height: 200px;" />
                        }
                    }
                </div>
                <div class="col-md-8">
                    <h5>Auto Eigenschapen</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md">
                                    <b>LaadRuimte: </b>
                                </div>
                                <div class="col-md">
                                    @Model.LaadRuimte L
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md">
                                    <b>Schakeltiepe: </b>
                                </div>
                                <div class="col-md">
                                    @Model.SchakelType.Schakeltype1
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md">
                                    <b>Zitplaatsen: </b>
                                </div>
                                <div class="col-md">
                                    @Model.ZitPlaatsen
                                </div>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md">
                                    <b>Trekhaak: </b>
                                </div>
                                <div class="col-md">
                                    @{
                                        if (Model.Trekhaak)
                                        {
                                            <text>Ja</text>
                                        }
                                        else
                                        {
                                            <text>Nee</text>
                                        }
                                    }
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md">
                                    <b>Brandstof: </b>
                                </div>
                                <div class="col-md">
                                    @Model.Brandstof.BrandstofType
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md">
                                    <b>Gewicht: </b>
                                </div>
                                <div class="col-md">
                                    @Model.Gewicht KG
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md">
                                    <b>Aantal deuren: </b>
                                </div>
                                <div class="col-md">
                                    @Model.AantalDeuren
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <h3>Prijs Per dag: @String.Format("{0:C}", Model.AutoPrijs.Where(t => t.AutoTypeID == Model.ID && DateTime.Now > t.StartDatum && t.EindDatum == null).First().Prijs)</h3>
                        </div>
                    </div>



                </div>


            </div>
            @{
                if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary" }) <span>&nbsp;</span>
                    @Html.ActionLink("Back to List", "Index", new { id = Model.ID }, new { @class = "btn btn-primary" })
                }
            }

        </div>
    </div>
</div>





