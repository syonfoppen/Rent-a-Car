@model Rent_a_Car.Models.RegisterViewModel
@{
    ViewBag.Title = "Registreren";
    Layout = null;
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Rent a Car Mockup</title>
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,700">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link href="@Url.Content("~/assets/css/Pretty-Registration-Form.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/css/Login-Form-Dark.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
</head>

<style>
    body{
        background-color: #283655;
    }
</style>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

}
    <div class="row register-form" style="background-color: #283655;">
        <div class="col-md-8 col-xl-10 offset-md-2 offset-xl-1">
            <form class="custom-form" style="background-color: #4d648d;color: rgb(255,255,255);" action="/Account/Register" role="form" method="post">
                @Html.AntiForgeryToken()
                <h1 style="color: rgb(255,255,255);">Registreer</h1>
                @Html.ValidationSummary("", new { @class = "text-white" })
                <div class="form-row" style="color: rgb(255,255,255);">
                    <div class="col-xl-6" style="color: rgb(255,255,255);">
                        @*All personal information fields*@
                        <div id="persoonsgegevens">
                            <div class="form-row form-group">
                                <div class="col-sm-4 label-column"><label class="col-form-label" for="name-input-field" style="color: rgb(255,255,255);">Voornaam</label></div>
                                <div class="col-sm-6 input-column">@Html.TextBoxFor(m => m.Voornaam, new { @class = "form-control" })</div>
                            </div>
                            <div class="form-row form-group">
                                <div class="col-sm-4 label-column"><label class="col-form-label" for="email-input-field" style="color: rgb(255,255,255);">Tussenvoegsel</label></div>
                                <div class="col-sm-6 input-column">@Html.TextBoxFor(m => m.Tussenvoegsel, new { @class = "form-control" })</div>
                            </div>
                            <div class="form-row form-group">
                                <div class="col-sm-4 label-column"><label class="col-form-label" for="pawssword-input-field" style="color: rgb(255,255,255);">Achternaam</label></div>
                                <div class="col-sm-6 input-column">@Html.TextBoxFor(m => m.Achternaam, new { @class = "form-control" })</div>
                            </div>
                            <div class="form-row form-group">
                                <div class="col-sm-4 label-column"><label class="col-form-label" for="repeat-pawssword-input-field" style="color: rgb(255,255,255);">Geboortedatum</label></div>
                                <div class="col-sm-6 input-column">@Html.TextBoxFor(m => m.Geboortedatum, new { @class = "form-control", type = "date" })</div>
                            </div>
                            <div class="form-row form-group">
                                <div class="col-sm-4 label-column"><label class="col-form-label" for="repeat-pawssword-input-field" style="color: rgb(255,255,255);">Telefoonnummer</label></div>
                                <div class="col-sm-6 input-column">@Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })</div>
                            </div>
                            <div class="form-row form-group">
                                <div class="col-sm-4 label-column"><label class="col-form-label" for="repeat-pawssword-input-field" style="color: rgb(255,255,255);">Email</label></div>
                                <div class="col-sm-6 input-column">@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })</div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div id="woongegevens">
                            <div class="form-row form-group">
                                <div class="col-sm-4 label-column"><label class="col-form-label" for="repeat-pawssword-input-field" style="color: rgb(255,255,255);">Land</label></div>
                                <div class="col-sm-6 input-column">@Html.TextBoxFor(m => m.Land, new { @class = "form-control" })</div>
                            </div>
                            <div class="form-row form-group">
                                <div class="col-sm-4 label-column"><label class="col-form-label" for="repeat-pawssword-input-field" style="color: rgb(255,255,255);">Provincie</label></div>
                                <div class="col-sm-6 input-column">@Html.TextBoxFor(m => m.Provincie, new { @class = "form-control" })</div>
                            </div>
                            <div class="form-row form-group">
                                <div class="col-sm-4 label-column"><label class="col-form-label" for="repeat-pawssword-input-field" style="color: rgb(255,255,255);">Plaats</label></div>
                                <div class="col-sm-6 input-column">@Html.TextBoxFor(m => m.Plaats, new { @class = "form-control" })</div>
                            </div>
                            <div class="form-row form-group">
                                <div class="col-sm-4 label-column"><label class="col-form-label" for="repeat-pawssword-input-field" style="color: rgb(255,255,255);">Postcode</label></div>
                                <div class="col-sm-6 input-column">@Html.TextBoxFor(m => m.PostCode, new { @class = "form-control" })</div>
                            </div>
                            <div class="form-row form-group">
                                <div class="col-sm-4 label-column"><label class="col-form-label" for="repeat-pawssword-input-field" style="color: rgb(255,255,255);">Straat</label></div>
                                <div class="col-sm-6 input-column">@Html.TextBoxFor(m => m.Straat, new { @class = "form-control" })</div>
                            </div>
                            <div class="form-row">
                                <div class="col">
                                    <div class="form-row form-group">
                                        <div class="col-sm-4 offset-xl-4 label-column"><label class="col-form-label" for="repeat-pawssword-input-field" style="color: rgb(255,255,255);">Huisnummer</label></div>
                                        <div class="col-sm-6 col-xl-4 offset-xl-0 input-column">@Html.TextBoxFor(m => m.Huisnummer, new { @class = "form-control" })</div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-row form-group">
                                        <div class="col-sm-4 offset-xl-0 label-column"><label class="col-form-label" for="repeat-pawssword-input-field" style="color: rgb(255,255,255);">Toevoeging</label></div>
                                        <div class="col-sm-6 col-xl-4 input-column">@Html.TextBoxFor(m => m.Toevoeging, new { @class = "form-control" })</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="form-row form-group">
                    <div class="col-sm-4 col-xl-3 label-column"><label class="col-form-label" for="repeat-pawssword-input-field" style="color: rgb(255,255,255);">Wachtwoord</label></div>
                    <div class="col-sm-6 col-xl-6 input-column">@Html.PasswordFor(m => m.Password, new { @class = "form-control" })</div>
                </div>
                <div class="form-row form-group">
                    <div class="col-sm-4 col-xl-3 label-column"><label class="col-form-label" for="repeat-pawssword-input-field" style="color: rgb(255,255,255);">Bevestiging Wachtwoord</label></div>
                    <div class="col-sm-6 col-xl-6 input-column">@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })</div>
                </div>
                <div class="form-check"><input class="form-check-input" required type="checkbox" id="formCheck-1"><label class="form-check-label" for="formCheck-1">Ik heb de acceptatieovereenkomsten gelezen en ben er mee akkoord.</label></div>
                <input type="submit" class="btn btn-primary submit-button" value="Registreer" />
            </form>
        </div>
    </div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
<script src="assets/js/freelancer.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}