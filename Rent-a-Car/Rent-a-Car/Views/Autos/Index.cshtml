    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";

}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kenteken)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BouwJaar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Beschikbaar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AutoType.Merk)
        </th>
        <th></th>
    </tr>

