            @Html.DisplayFor(modelItem => item.Kenteken)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BouwJaar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Beschikbaar)
        </td>
